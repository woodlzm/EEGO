      </span>
-->

      </div>
    </div>
  </div>
</div>

<div class="container" id="listing">
  <table class="table table-striped">
    <tbody>
    <% if @no_user == 0 %>
      <% @users.each do |user| %>
      <tr>
        <% if user.id != current_user.id %>
          <div class="row">
            <td><%= user.email %></td>
            <td>
              <% if !is_friend?(user) %>
                <% if is_pending_request?(user) %>
                  <span class="input-group-btn">
                    <button class="btn btn-xs btn-default pull-right" type="button" disabled>&nbsp;&nbsp;Pending&nbsp;</button>
                  </span>
                <% else %>
	          <%= form_tag '/friends', method: :post, id: "request_form_#{user.id}" do %>
	            <%= text_field_tag :friend, user.id, type: :hidden %>
                  <% end %>
                  <span class="input-group-btn">
                    <button onclick="sendRequest(<%= user.id %>)" class="btn btn-xs btn-primary pull-right" type="button">&nbsp;Request&nbsp;</button>
                  </span>
	        <% end %>
              <% end %>
            </td>
          </div>
        <% end %>
      </tr>
      <% end %>
    <% elsif @no_user == 1%>
      <div class="note">
        <p>No results found.</p>
      </div>
    <% else %>
      <div class="note">
        <p>You have no friends at the moment. Find your friends now!</p>
      </div>
    <% end %>
    </tbody>
  </table>
</div>

<script>
  function searchFriend() {
    var form = $("#search_friends");
    form.submit();
  }

  function sendRequest(id) {
    var form = $("#request_form_" + id);
    form.submit();
  }
</script>
